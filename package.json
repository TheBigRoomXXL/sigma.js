{
  "name": "@sigma/root",
  "description": "A JavaScript library aimed at visualizing graphs of thousands of nodes and edges.",
  "homepage": "https://www.sigmajs.org",
  "bugs": "http://github.com/jacomyal/sigma.js/issues",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "prettify": "prettier --write .",
    "sigma:test": "npm run test --workspace=sigma",
    "sigma:unit:test": "npm run unit:test --workspace=sigma",
    "sigma:e2e:test": "npm run e2e:test --workspace=sigma",
    "examples:build": "npm run build --workspace=@sigma/examples",
    "examples:start": "npm run start --workspace=@sigma/examples",
    "demo:start": "npm start --workspace=@sigma/demo",
    "demo:build": "npm run build --workspace=@sigma/demo",
    "website:build": "npm run build --workspace=@sigma/website",
    "website:all": "npm run website:build && npm run demo:build && cp -R packages/demo/build packages/website/build/demo && npm run storybook:build && cp -R packages/storybook/storybook-static packages/website/build/storybook",
    "storybook:run": "npm run start --workspace=@sigma/storybook",
    "storybook:build": "npm run build --workspace=@sigma/storybook"
  },
  "dependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@preconstruct/cli": "^2.8.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-storybook": "^0.6.15",
    "lerna": "^8.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2"
  },
  "preconstruct": {
    "packages": [
      "packages/sigma",
      "packages/node-image"
    ]
  }
}
